<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/app_theme_primary"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/modalSheet_EditIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/edit_icon_bottomsheet">
                </ImageView>

                <ImageView
                    android:id="@+id/modalSheet_DeleteIcon"
                    android:layout_width="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/modalSheet_EditIcon"
                    android:layout_height="25dp"
                    android:src="@drawable/delete_icon_bottomsheet">
                </ImageView>

                <TextView
                    android:id="@+id/edit_item_txtview"
                    android:layout_width="200dp"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/modalSheet_EditIcon"
                    android:text="Edit Event"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/remove_item_txtview"
                    android:layout_width="200dp"
                    android:layout_alignTop="@id/modalSheet_DeleteIcon"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:text="Delete Event"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

