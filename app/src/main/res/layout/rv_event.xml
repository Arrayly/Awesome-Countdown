<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_rv_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_rv_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/event_rv_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/event_rv_title_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="13dp"
                android:text="TITLE"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/event_rv_time_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/event_rv_title_txv"
                android:text="TIME"
                android:layout_marginLeft="125dp"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/event_rv_id_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/event_rv_time_txv"
                android:layout_marginLeft="275dp"
                android:text="ID"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/displayDays_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_rv_title_txv"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:text="days"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/displayMinutes_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/displayDays_txtView"
                android:text="Minutes"
                android:layout_marginLeft="100dp"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/displaySeconds_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/displayDays_txtView"
                android:layout_marginLeft="200dp"
                android:text="seconds"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/display_hours_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/displayDays_txtView"
                android:layout_marginTop="13dp"
                android:layout_marginStart="10dp"
                android:text="hours"
                android:textSize="25sp"
                android:textStyle="normal" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
