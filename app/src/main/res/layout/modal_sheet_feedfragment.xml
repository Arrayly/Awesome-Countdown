<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/app_theme_primary"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/modalSheet_feedFragment_addIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/add_icon_bottomsheet">
                </ImageView>

                <ImageView
                    android:id="@+id/modalSheet_feedFragment_shareIcon"
                    android:layout_width="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/modalSheet_feedFragment_addIcon"
                    android:layout_height="25dp"
                    android:src="@drawable/share_icon_bottomsheet">
                </ImageView>

                <ImageView
                    android:id="@+id/modalSheet_feedFragment_browseIcon"
                    android:layout_width="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/modalSheet_feedFragment_shareIcon"
                    android:layout_height="25dp"
                    android:src="@drawable/browse_icon_bottomsheet">
                </ImageView>

                <TextView
                    android:id="@+id/modalSheet_feedFragment_addTextView"
                    android:layout_width="200dp"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/modalSheet_feedFragment_addIcon"
                    android:text="Add to Countdown"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/modalSheet_feedFragment_shareTextView"
                    android:layout_width="200dp"
                    android:layout_alignTop="@id/modalSheet_feedFragment_shareIcon"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:text="Share Event"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/modalSheet_feedFragment_browse"
                    android:layout_width="200dp"
                    android:layout_alignTop="@id/modalSheet_feedFragment_browseIcon"
                    android:textSize="15sp"
                    android:layout_marginLeft="50dp"
                    android:text="Browse"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

